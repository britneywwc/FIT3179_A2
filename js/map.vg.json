{
    "#schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Coffee Around The World (2018)",
    "width": 800,
    "height": 600,
    "projection": {"type": "equirectangular"},
    "mark": {"type": "geoshape"},
    "data": {
        "url": "js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_contries"}
    },
    "transform": [{
        "lookup": "properties.name",
        "from": {
            "data": {
                "url": "coffee/total-production.csv"
            },
            "key": "total_production",
            "fields": ["2018"]
        }
    }],
    "encoding": {
        "color": {
            "field": "2018",
            "type": "quantitative"
        }
    }
}